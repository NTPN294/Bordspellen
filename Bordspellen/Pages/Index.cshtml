@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}


<div class="containerBody">
    <div class="containerBanner" >
       <img class="banner" src="~/lib/Images/people2.jpeg" />
    </div>

    <div class="containerContent">

        <div class="containerEventBlock">
            <h2>Aankomende evenementen</h2>
            </br>
            <div class="containerItems">
                @foreach (Event ev in Model.EventRepo.Events.OrderBy(e => e.Date).Take(6))
                {
                    <div class="containerItem">
                        <img class="eventImage" src="~/lib/images/test.png" />
                        <h3>@ev.Host</h3>
                        <p>@ev.Date.ToString("dd MMMM yyyy", new System.Globalization.CultureInfo("nl-NL"))</p>
                    </div>
                }
            </div>
            </br>
            <p class="textGreen">Meer Evenementen</p>

        </div>

        <div class="containerBlock2">

            <div class="containerPopular">
                <h2>Populaire evenementen</h2>
                </br>

                <div class="containerPopularItems">
                    @foreach (Event ev in Model.EventRepo.Events.Take(4))
                    {
                        <div class="containerItem">
                            <img class="eventImage" src="~/lib/images/test.png" />
                            <h3>@ev.Host</h3>
                            <p>@ev.Date.ToString("dd MMMM yyyy", new System.Globalization.CultureInfo("nl-NL"))</p>
                        </div>
                    }
                </div>
                </br>

                <p class="textGreen">Meer Evenementen</p>

            </div>


            <div class="containerCreateBlock">
                <h2>Maak nu je eigen evenement aan!</h2>
                <button class="roundButton">Nu aanmaken</button>
            </div>
        </div>

       
      

    </div>
    
</div>
